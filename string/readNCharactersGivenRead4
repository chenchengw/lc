    public int read(char[] buf, int n) {
        char[] myBuf = new char[4];
        int i = 0;
        while (i < n) {
            int num = read4(myBuf);
            if (num == 0) break;
            int j = 0;
            while (j < num && i < n) {
                buf[i++] = myBuf[j++];
            }
        }
        return i;
    }
