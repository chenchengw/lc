    public int read(char[] buf, int n) {
        char[] buf4 = new char[4];
        int i = 0;
        while (true) {
            int inSize = read4(buf4);
            for (int j = 0; j < inSize && i < n; j++) {
                buf[i++] = buf4[j];
            }
            if (inSize == 0 || i == n) {
                break;
            }
        }
        return i;
    }
