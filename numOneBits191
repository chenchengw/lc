//naive solution
public int hammingWeight(int n) {
      int ones = 0;
      int mask = 1;
      for(int i = 0; i < 32; i++) {
          if ((n & mask) != 0) { 
              ones++;
          }
          mask <<= 1;
      }
      return ones;
  }

//better solution
public int hammingWeight(int n) {
    int ones = 0;
    while (n != 0) {
        ones++;
        n &= (n-1);
    }
    return ones;
}


//reference: https://leetcode.com/problems/number-of-1-bits/solution/
