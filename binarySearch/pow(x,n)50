//recursive solution
public double myPow(double x, int n) {
    if (n == 0) return 1.0;
    double half = myPow(x, n/2);
    if (n%2 == 0) return half*half;
    else if (n > 0) return half*half*x;
    else return half*half/x;
}
    
//iterative solution
public double myPow(double x, int n) {
    double ans = 1.0;
    int i = n;
    while(i != 0) {
        if(i%2 != 0) ans *= x;
        x *= x;
        i/= 2;
    }
    return n > 0 ? ans : 1/ans;
}
